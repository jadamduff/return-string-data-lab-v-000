<% @products.each do |product| %>
  <div class="product" id="product_<%= product.id %>">
    <ul>
      <li>
        <h1><%= product.name %></h1>
      </li>
      <li class="description">
        <%= truncate product.description %><br />
        <button class="js-more" data-id="<%= post.id %>">More...</button>
      </li>
    </ul>
  </div>
<% end %>
